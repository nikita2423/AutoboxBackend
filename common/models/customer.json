{
  "name": "Customer",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "hidden": [
    "password"
  ],
  "properties": {
    "firstName": {
      "type": "string",
      "template": {
        "type": "input",
        "templateOptions": {
          "container": "customerBox",
          "type": "text",
          "label": "Enter First Name",
          "id": "CustomerFirstName",
          "inline": true,
          "colSize": "col-xs-6",
          "priority": 10
        }
      }
    },
    "lastName": {
      "type": "string",
      "template": {
        "type": "input",
        "templateOptions": {
          "container": "customerBox",
          "type": "text",
          "label": "Enter lastName",
          "id": "CustomerSurName",
          "inline": true,
          "colSize": "col-xs-6",
          "priority": 9
        }
      }
    },
    "registerStatus": {
      "type": "string",
      "required": true,
      "default": "notregistered",
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "Register Status",
          "id": "registerStatus",
          "priority": 3,
          "options": [
            "registered",
            "notregistered"
          ]
        }
      }
    },
    "cityName": {
      "type": "string"
    },
    "countryName": {
      "type": "string",
      "default": "India"
    },
    "serviceCenter": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "active",
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "Status of Customer",
          "id": "customerStatus",
          "priority": 6,
          "options": [
            "active",
            "inactive"
          ]
        }
      }
    },
    "phoneNumber": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "container": "customerBox",
          "type": "text",
          "label": "Enter Phone Number",
          "id": "phoneNumber",
          "priority": 8
        }
      }
    },
    "email": {
      "type": "string",
      "required": false,
      "template": {
        "type": "input",
        "templateOptions": {
          "container": "customerBox",
          "type": "email",
          "label": "Enter customer email",
          "id": "CustomerEmail",
          "priority": 7
        }
      }
    },
    "username": {
      "type": "string"
    },
    "added": {
      "type": "date",
      "required": true,
      "defaultFn": "now",
      "template": {
        "type": "dummy"
      }
    },
    "updated": {
      "type": "date",
      "defaultFn": "now"
    },
    "registrationId": {
      "type": "string",
      "required": false
    },
    "profilePic": {
      "type": "object"
    },
    "referralCode": {
      "type": "string"
    },
    "locationUrl": {
      "type": "string"
    },
    "referralCount": {
      "type": "number",
      "default": 0
    },
    "sosStatus": {
      "type": "string",
      "required": true,
      "default": "incomplete",
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "Sos Status",
          "id": "incomplete",
          "priority": 2,
          "options": [
            "complete",
            "incomplete"
          ]
        }
      }
    },
    "vehicleAdded": {
      "type": "number",
      "required": false,
      "default": 0
    },
    "notificationSettings": {
      "type": "object",
      "required": false,
      "template": {
        "type": "objectValue",
        "templateOptions": {
          "priority": 13,
          "fields": [
            {
              "key": "offerNotification",
              "type": "input",
              "default": "on"
            }
          ]
        }
      }
    },
    "gpsTrackerNotification": {
      "type": "object",
      "required": false,
      "template": {
        "type": "objectValue",
        "templateOptions": {
          "fields": [
            {
              "key": "hardBraking",
              "type": "input",
              "default": "on"
            },
            {
              "key": "hardAcceleration",
              "type": "input",
              "default": "on"
            },
            {
              "key": "gpsDisconnect",
              "type": "input",
              "default": "on"
            },
            {
              "key": "vehicleTowing",
              "type": "input",
              "default": "on"
            },
            {
              "key": "accidentDetection",
              "type": "input",
              "default": "on"
            },
            {
              "key": "overSpeeding",
              "type": "input",
              "default": "on"
            },
            {
              "key": "engineOn",
              "type": "input",
              "default": "on"
            },
            {
              "key": "engineOff",
              "type": "input",
              "default": "on"
            }
          ]
        }
      }
    },
    "bloodGroup": {
      "type": "string"
    },
    "googleRefreshToken": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "facebookAccessToken": {
      "type": "hasMany",
      "model": "FacebookAccessToken",
      "foreignKey": "",
      "onCascadeDelete": true
    },
    "city": {
      "type": "belongsTo",
      "model": "City",
      "foreignKey": "",
      "templateOptions": {
        "btnText": "Add City",
        "searchProp": "name",
        "priority": 5,
        "type": "smartSelect",
        "readOnly": false,
        "id": "AddCity",
        "label": "Add City"
      }
    },
    "country": {
      "type": "belongsTo",
      "model": "Country",
      "foreignKey": ""
    },
    "workshop": {
      "type": "belongsTo",
      "model": "Workshop",
      "foreignKey": ""
    },
    "bus": {
      "type": "belongsTo",
      "model": "Bus",
      "foreignKey": ""
    },
    "planType": {
      "type": "belongsTo",
      "model": "PlanType",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "requestOTP"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "loginWithCode"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "staff",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "staff",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "staff",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "staff",
      "permission": "ALLOW",
      "property": "findOne"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "isAdmin"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getSchema"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getAbsoluteSchema"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "count"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "save"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "saveCustomer",
        "onCompletePurchase",
        "setGpsNotificationStatus",
        "setOfferNotificationStatus"
      ]
    }
  ],
  "methods": {}
}
