{
  "name": "Offer",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "priority": 3,
          "label": "Enter title",
          "id": "offerTitle"
        }
      }
    },
    "description": {
      "type": "string",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "text",
          "priority": 3,
          "label": "Enter description",
          "id": "offerDescription"
        }
      }
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "active",
      "template": {
        "type": "selectString",
        "templateOptions": {
          "label": "Status of Offer",
          "id": "offerStatus",
          "inline": true,
          "colSize": "col-xs-6",
          "priority": 6,
          "options": [
            "active",
            "expired"
          ]
        }
      }
    },
    "expiredOn": {
      "type": "date",
      "required": true,
      "template": {
        "type": "input",
        "templateOptions": {
          "type": "date",
          "inline": true,
          "colSize": "col-xs-6",
          "priority": 3,
          "label": "Enter Date of Expiry",
          "id": "dateOfExpiry"
        }
      }
    },
    "added": {
      "type": "date",
      "required": true,
      "defaultFn": "now",
      "template": {
        "type": "dummy"
      }
    },
    "updated": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "isRead": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "city": {
      "type": "belongsTo",
      "model": "City",
      "foreignKey": "",
      "templateOptions": {
        "btnText": "Add City",
        "searchProp": "name",
        "priority": 2,
        "type": "smartSelect",
        "search": true,
        "create": false,
        "inline": true,
        "colSize": "col-xs-6",
        "id": "AddCity",
        "hide": false,
        "label": "Add City"
      }
    },
    "area": {
      "type": "belongsTo",
      "model": "Area",
      "foreignKey": "",
      "templateOptions": {
        "btnText": "Add Area",
        "searchProp": "name",
        "priority": 2,
        "type": "smartSelect",
        "search": true,
        "create": false,
        "inline": true,
        "colSize": "col-xs-6",
        "id": "AddArea",
        "hide": false,
        "label": "Add Area"
      }
    },
    "brand": {
      "type": "belongsTo",
      "model": "Brand",
      "foreignKey": "",
      "templateOptions": {
        "btnText": "Add Brand",
        "searchProp": "name",
        "priority": 2,
        "type": "smartSelect",
        "search": true,
        "create": false,
        "inline": true,
        "colSize": "col-xs-6",
        "id": "AddBrand",
        "hide": false,
        "label": "Add Brand"
      }
    },
    "dealer": {
      "type": "belongsTo",
      "model": "Dealer",
      "foreignKey": "",
      "templateOptions": {
        "btnText": "Add Dealer",
        "searchProp": "email",
        "priority": 2,
        "type": "smartSelect",
        "search": true,
        "create": false,
        "inline": true,
        "colSize": "col-xs-6",
        "id": "AddDealer",
        "hide": false,
        "label": "Add Dealer"
      }
    }
  },
  "acls": [],
  "methods": {}
}
